<form action='/' method='POST'>
  <p>
    <img src="/assets/images/IdeaBox-logo.png" class="img-responsive" alt="Responsive image">
  Your Idea:
  </p>
  Title:<input type='text' name='idea[title]'/><br/>
  Tags:<input type='text' name='idea[tags]'><br/>
  Description:<br/>
  <textarea name='idea[description]'></textarea><br/>
  <input type='submit'/>
</form>
<h3>Existing Ideas</h3>

<ul>
  <% ideas.each do |idea| %>
    <li>
      <form action='/<%= idea.id %>/like' method='POST' style="display: inline" >
        <!-- <input type='submit' value="+"/> -->

        <button type="button" class="btn btn-default btn-sm">
          <span class="glyphicon glyphicon-star"></span> Favorite
        </button>
      </form>
      Title: <%= idea.title %><br/>
      Tags: <%= idea.tags %><br/>
      Description: <%= idea.description %><br/>
      <a href="/<%= idea.id %>/edit">Edit</a>
      <form action='/<%= idea.id %>' method='POST'>
        <input type="hidden" name="_method" value="DELETE">
        <input type='submit' value="delete"/>
      </form>
    </li>
  <% end %>
</ul>
